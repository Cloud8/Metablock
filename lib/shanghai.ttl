@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix : <http://localhost/terms/> .

:about dct:title  "Configurator" ;
       dct:date   "2014-02-02" ;
       dct:description "A Turtle Adventure" .

:crawl :source :files ;
       :target :virt ;
       :count  "90"^^xsd:integer ;
       :test   "data/crawl-test.rdf"^^xsd:string ;
       :create "false"^^xsd:boolean .

:files :depth  "5"^^xsd:integer ;
       :suffix ".rdf"^^xsd:string ; 
       :count  "100"^^xsd:integer ; 
       :store "data" .

:tdb   :store  "/vol/vol01/data/jena.tdb" ;
       :probe  "/sparql/rdf-probe.sparql" ;
       :enum   "/sparql/rdf-index.sparql" ;
       :dump   "/sparql/rdf-about.sparql" .

:virt  :store "jdbc:virtuoso://localhost:1111" ;
       :graph "http://archiv.ub.uni-marburg.de" ;
       :dbuser "xxxxx" ;
       :dbpass "zzzzz" ;
       :probe  "/sparql/rdf-probe.sparql" ;
       :enum   "/sparql/rdf-index.sparql" ;
       :dump   "/sparql/rdf-about.sparql" .

:solr1 :url   "http://localhost:8080/solr" ;
       :transformer "/xslt/shanghai-transform.xslt" ;
       :core  "biblio" .

## first part is standard index, or use indexName switch. 
:index :hasPart :index01 ;
       :hasPart :index02 ;
       .

## Use the sparql service point for data retrieval,
## transformed records goes to :store
:index01 :sparql "http://localhost:8890/sparql" ;
       :probe  "/sparql/shanghai-probe.sparql" ;
       :enum   "/sparql/shanghai-index.sparql" ;
       :dump   "/sparql/shanghai-about.sparql" ;
       :transformer "/xslt/shanghai-transform.xslt" ;
       :count  "600"^^xsd:integer ;
       :test   "data/shanghai-about.rdf" ;
       :store  "http://localhost:8080/solr/biblio" .

:index02 :sparql "http://localhost:8890/sparql" ;
       :probe  "/sparql/rdf-probe.sparql" ;
       :enum   "/sparql/rdf-index.sparql" ;
       :dump   "/sparql/rdf-about.sparql" ;
       :count  "10"^^xsd:integer ;
       :test   "data/shanghai-about.rdf" ;
       :store  :solr1 .

## OAI harvesting 
:oai   :hasPart :oai01 ;
       :urnPrefix "urn:nbn:de:hebis:04-" .

## harvest records from this source not older than some <days>.
## from and until will override day settings.
:oai01 :harvest "http://archiv.ub.uni-marburg.de/ubfind/OAI/Server" ;
       :prefix  "xMetaDissPlus" ;
       :days    "5"^^xsd:integer ;
       :transformer "/xslt/xmdp2rdf.xslt" .

#--#-#-#-#-#-#-# end of turtle config #-#-#-#-#-#-#-#-#-#
