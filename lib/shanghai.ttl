@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix : <http://localhost/terms/> .

:about dct:title  "Configurator" ;
       dct:date   "2013-10-19" ;
       dct:description "A Turtle Adventure" .

:crawl :source :web ;
       :target :solr3 ;
       :count  "10"^^xsd:integer ;
       :test   "data/crawl-test.rdf"^^xsd:string ;
       :iri    "http://localhost/view/nlp/" ;
       :nlp    "grobid lang"^^xsd:string ; ## grobid cermine lang
       :create "false"^^xsd:boolean .

:files :depth  "5"^^xsd:integer ;
       :suffix ".rdf .pdf .java .epub"^^xsd:string ; 
       # :suffix ".rdf"^^xsd:string ; 
       :count  "100"^^xsd:integer ; 
       :cache  "/var/cache/apache2/cover" ; ## pdf cover images
       :base   "http://localhost/view/page/" ; ## pdf view base
       :book   "http://localhost/view/book/" ; ## epub view base
       :store "data" .

:tdb   :store  "/vol/vol01/data/jena.tdb" ;
       :probe  "/sparql/rdf-probe.sparql" ;
       :enum   "/sparql/rdf-index.sparql" ;
       :dump   "/sparql/rdf-about.sparql" .
       # :date "2014-01-01"

:virt  :store "jdbc:virtuoso://localhost:1111" ;
       :graph "http://archiv.ub.uni-marburg.de" ;
       :dbuser "xxxxx" ;
       :dbpass "zzzzz" ;
       :probe  "/sparql/rdf-probe.sparql" ;
       :enum   "/sparql/rdf-index.sparql" ;
       :dump   "/sparql/rdf-about.sparql" .

:solr1 :url   "http://localhost:8080/solr" ;
       :transformer "/xslt/shanghai-transform.xslt" ;
       :transporter "/xslt/solr2rdf.xslt" ;
       :core  "biblio" .

:solr2 :url   "http://localhost:8080/solr" ;
       :transformer "/xslt/opac-transform.xslt" ;
       :core  "biblio" .

:solr3 :url   "http://localhost:8080/solr" ;
       :transformer "/xslt/analyzer-transform.xslt" ;
       :transporter "/xslt/solr2rdf.xslt" ;
       :core  "website" .

## source, no target 
:web   :crawl "http://www.uni-marburg.de/bis" ;
       :cache "/vol/vol01/data/cache" ;
       :robots "4"^^xsd:integer .

## first part is standard index, or use indexName switch. 
:index :hasPart :index01 ;
       :hasPart :index02 ;
       .

## Use the sparql service point (or :tdb) for data retrieval,
## use queries and transformation from the files. 
## If asked for a -dump, use the given test file as storage.
## Transformed records goes to :store (a valid solr uri).
:index01 :sparql "http://localhost:8890/sparql" ;
       :probe  "/sparql/shanghai-probe.sparql" ;
       :enum   "/sparql/shanghai-index.sparql" ;
       :dump   "/sparql/shanghai-about.sparql" ;
       :transformer "/xslt/shanghai-transform.xslt" ;
       :count  "600"^^xsd:integer ;
       :test   "data/shanghai-about.rdf" ;
       :store  "http://localhost:8080/solr/biblio" .

:index02 :sparql :tdb ;
       :probe  "/sparql/rdf-probe.sparql" ;
       :enum   "/sparql/rdf-index.sparql" ;
       :dump   "/sparql/rdf-about.sparql" ;
       :count  "10"^^xsd:integer ;
       :test   "data/shanghai-about.rdf" ;
       :store  :solr1 .

